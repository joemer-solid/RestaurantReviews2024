@inject RestaurantReviews2024.App.Services.TokenProvider TokenProvider

<div class="sidebar" style="width:100px;">
    <div class="menu list-group list-group-flush">
        <AuthorizeView>
            <Authorized>
                <NavLink class="list-group-item list-group-item-action" href="/" Match="NavLinkMatch.All">
                    Home
                </NavLink>
                <NavLink class="list-group-item list-group-item-action" href="/restaurantlist">
                    View Restaurants
                </NavLink>
                <form action="/identity/account/logout" method="post">
                    <button class="nav-link btn btn-link" type="submit">
                        <span class="oi oi-list-rich" aria-hidden="true"></span> Log out (@context?.User?.Identity?.Name)
                    </button>
                    <input name="__RequestVerificationToken" type="hidden"
                           value="@TokenProvider.XsrfToken">
                </form>
            </Authorized>
            <NotAuthorized>
                <NavLink class="list-group-item list-group-item-action" href="/login">
                    Log In
                </NavLink>
            </NotAuthorized>
        </AuthorizeView>
    </div>
</div>